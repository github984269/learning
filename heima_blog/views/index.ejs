<!-- 导入头部的代码 -->
<%- include("./layout/header.ejs")  %>

<!-- 文字列表 -->
<h2>首页</h2>
<div class="list-group" style="margin: 10px;">
    <% for(var i = 0; i < article.length; i++) {  %>
    <a href="/article/info/<%= article[i].id %>" class="list-group-item" style="padding-right: 10px;"><%= article[i].title %>
        <span class="badge" style="background-color: #f0ad4e;">创建时间：<%= article[i].ctime %></span>
        <span class="badge" style="background-color: #5bc0de;">作者：<%= article[i].nickname %></span>
    </a>
    <% }  %>
</div>
<!-- 分页 -->
<nav aria-label="Page navigation" style="margin: 10px;">
        <ul class="pagination">
          <li>
            <a href="/?page=<%= nowpage == 1 ? 1 : nowpage-1%>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <% for(var i = 0; i < pagetotal; i++) {  %>
          <li class="<%= nowpage == (i+1)? 'active' : '' %>"><a href="/?page=<%= i+1  %>"><%= i+1  %></a></li>
          <% }  %>
          <li>
            <a href="/?page=<%= nowpage == pagetotal ? pagetotal : nowpage+1%>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>

<!-- 导入底部 -->
<%- include("./layout/footer.ejs")  %>